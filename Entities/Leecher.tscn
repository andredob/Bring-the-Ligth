script/source = "extends KinematicBody2D
# Laws of Physics
const GRAVITY = Vector2(0, 1000)
# Movement Constants
const FLOOR_NORMAL = Vector2(0, -1)
const SLOPE_FRICTION = 0
const MOVEMENT_SPEED = 1
const ACCELERATION = 0.8
const SHOOT_DELAY = 20
const DANO = 20

var vida  = 3

# Player Variables
var velocity = Vector2()
var distPercorrida = 200
var movement = 40
var distance2Hero = 1000
var viewRange = 150
var shootTime = SHOOT_DELAY
var timerDamage = 1
onready var player = get_parent().get_node(\"player\")
var shootPrefab = preload(\"res://Entities/EnergyCell.tscn\")
 
# Start
func _ready():
	set_fixed_process(true)
	pass
 
# Processing
func _fixed_process(delta):
	timerDamage += delta
	var distance2Player = get_global_pos().distance_to(player.get_global_pos());
	
	# Add Gravity
	velocity += GRAVITY * delta
	# Move and Slide
	velocity = move_and_slide(velocity, FLOOR_NORMAL, SLOPE_FRICTION)
	# Movement

	# Set movement speed
	movement *= MOVEMENT_SPEED
	# Change horizontal velocity
	velocity.x = lerp(velocity.x, movement, ACCELERATION)
	
	#Decrementa o timer do tiro
	shootTime -= 1
	
	#Verifica se o player está proximo
	if(distance2Player < viewRange):
		#Instancia um projétil que irá seguir o players
		if(shootTime <= 0):
			var m = shootPrefab.instance()
			m.target = get_node(\".\")
			m.set_pos(player.get_pos())
			get_parent().add_child(m)
			shootTime = SHOOT_DELAY
			
		if(player.get_global_pos().x < get_global_pos().x):
			print(\"Player à vista\")
			
			print(timerDamage)
			if(timerDamage >= 1):
				player.vida -= 10
				timerDamage = 0
			
			get_node(\"SamplePlayer\").play(\"pinguinRosnando\")
			movement = -40
			
		else:
			movement = 40
			
	else:
		distPercorrida -= 1
		if(distPercorrida == 0):
			movement *= -1
			print(movement)
			distPercorrida = 200
	if(movement >= 0):
		get_node(\"Sprite\").set_flip_h(false)
	else:
		get_node(\"Sprite\").set_flip_h(true)

func dano():
	vida -= 1
	if vida <=0:
		queue_free()	
	pass

	

	
